<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sub"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#5Fc309"
        android:onClick="numberClick"
        android:text="-"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_0"
        app:layout_constraintStart_toStartOf="@id/clear"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/div"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#5Fc309"
        android:onClick="numberClick"
        android:text="/"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/calc"
        app:layout_constraintStart_toStartOf="@id/btn_0"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/plus"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#5Fc309"
        android:onClick="numberClick"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_0"
        app:layout_constraintStart_toStartOf="@id/clear"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/mul"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#5Fc309"
        android:onClick="numberClick"
        android:text="x"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/calc"
        app:layout_constraintStart_toStartOf="@id/btn_0"
        app:layout_constraintTop_toBottomOf="@+id/clear" />

    <Button
        android:id="@+id/calc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:onClick="numberClick"
        android:text="="
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/display"
        app:layout_constraintTop_toBottomOf="@+id/btn_9" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:onClick="numberClick"
        android:text="9"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/display"
        app:layout_constraintTop_toBottomOf="@+id/btn_6" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:onClick="numberClick"
        android:text="8"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@id/btn_9"
        app:layout_constraintStart_toEndOf="@id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_5" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:onClick="numberClick"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@id/calc"
        app:layout_constraintStart_toEndOf="@id/clear"
        app:layout_constraintTop_toBottomOf="@+id/btn_8" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:onClick="numberClick"
        android:text="7"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/display"
        app:layout_constraintTop_toBottomOf="@+id/btn_4" />

    <Button
        android:id="@+id/clear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF23f0"
        android:onClick="numberClick"
        android:text="C"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/display"
        app:layout_constraintTop_toBottomOf="@+id/btn_7" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:onClick="numberClick"
        android:text="4"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/display"
        app:layout_constraintTop_toBottomOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:onClick="numberClick"
        android:text="5"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@id/btn_6"
        app:layout_constraintStart_toEndOf="@id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_2" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:onClick="numberClick"
        android:text="6"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/display"
        app:layout_constraintTop_toBottomOf="@+id/btn_3" />

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:shadowColor="@color/black"
        android:shadowRadius="2"
        android:shadowDx="2"
        android:shadowDy="2"
        android:background="#708090"
        android:textColor="@color/white"
        android:text="0"
        android:textSize="40dp"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/display"
        app:layout_constraintTop_toBottomOf="@+id/display"
        android:onClick="numberClick" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:onClick="numberClick"
        android:text="2"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/display" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:onClick="numberClick"
        android:text="3"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/display"

        app:layout_constraintTop_toBottomOf="@+id/display" />

</androidx.constraintlayout.widget.ConstraintLayout>